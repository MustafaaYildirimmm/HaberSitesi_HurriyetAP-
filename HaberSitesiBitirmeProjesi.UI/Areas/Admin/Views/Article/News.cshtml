@using HaberSitesiBitirmeProjesi.Entity
@model IEnumerable<Articles>
@{
    ViewBag.Title = "News";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Front- Side News</h2>
<table class="table table-hover ">
    <thead>
        <tr>
            <th>Article Id</th>
            <th>Date</th>
            <th>Title</th>
            <th>Category</th>
            <th>Photo</th>
            <th>Details|Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>@item.ArticleId</th>
                <th>@item.NewsDate</th>
                <th class="col-md-4">@item.Title</th>
                <th>@item.Category.CategoryName</th>
                <th><img src="@item.Photo" alt="Alternate Text" width="100" height="100" /></th>
                <th>
                    <a href="~/Admin/Article/Details/@item.Id" class="btn btn-primary"><i class="glyphicon-edit"></i></a>
                    <a href="~/Article/Delete/@item.Id" class="btn btn-danger"><i class="glyphicon glyphicon-expand"></i></a>
                </th>
            </tr>
        }
    </tbody>
</table>
