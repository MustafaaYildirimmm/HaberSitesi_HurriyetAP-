                                <div class="collapse navbar-collapse" id="gazetteMenu">
                                    <ul class="navbar-nav mr-auto">
                                        @{

                                            CategoryRep cr = new CategoryRep();
                                            int i = 0;
                                            foreach (var item in cr.List().ProccessResult)
                                            {
                                                if (i == 0)
                                                {
                                                    <li class="nav-item active">
                                                        <a class="nav-link" href="~/Home/GetByCAt/@item.ID">@item.CategoryName <span class="sr-only">(current)</span></a>
                                                    </li>
                                                }
                                                else
                                                {
                                                    <li class="nav-item">
                                                        <a class="nav-link" href="~/Home/GetByCat/@item.ID">@item.CategoryName</a>
                                                    </li>
                                                }

                                                i++;
                                            }

