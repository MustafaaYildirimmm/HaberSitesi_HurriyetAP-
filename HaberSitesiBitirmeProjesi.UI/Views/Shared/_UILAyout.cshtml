                        <div class="logo-area">
                            <a href="~/Home/Index"><img src="~/thegazette/img/core-img/logo.png" alt="logo"></a>
                        </div>
                    </div>
                    <!-- Header Advert Area -->
                    <div class="col-12 col-md-8">
                        @{
                            Member m = (Member)Session["User"];
                            if (User.Identity.IsAuthenticated)
                            {
                                <div class="post-continue-btn pull-right">
                                    <a href="~/Account/LogOut" class="font-pt">LogOut </a>
                                </div>

                                <div class="post-continue-btn pull-right" style="margin-right:10px">
